<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".RegisterActivity">
   <TextView
       android:id="@+id/textView3"
       android:layout_width="130dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="240dp"
       android:layout_marginBottom="460dp"
       android:text="Here's your first step with us!"
       android:textColor="@color/white"
       android:textSize="30sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="240dp"
       android:layout_height="180dp"
       android:layout_marginLeft="130dp"
       android:layout_marginBottom="450dp"
       android:background="@color/teal_200"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/bg_main" />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="5dp"
       android:background="@drawable/register_box"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

      <EditText
          android:id="@+id/registerName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/edit_line"
          android:ems="10"
          android:hint="Name"
          android:inputType="textPersonName"
          android:textSize="18sp"
          app:layout_constraintTop_toTopOf="parent"
          tools:layout_editor_absoluteX="0dp" />

      <EditText
          android:id="@+id/registerEmail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/edit_line"
          android:ems="10"
          android:hint="Email"
          android:inputType="textEmailAddress"
          android:textSize="18sp"
          app:layout_constraintTop_toBottomOf="@+id/registerName"
          tools:layout_editor_absoluteX="56dp" />

      <EditText
          android:id="@+id/registerPass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/edit_line"
          android:ems="10"
          android:hint="Password"
          android:inputType="textPassword"
          android:textSize="18sp"
          app:layout_constraintTop_toBottomOf="@+id/registerEmail"
          tools:layout_editor_absoluteX="68dp" />

      <EditText
          android:id="@+id/regConfirmPass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/edit_line"
          android:ems="10"
          android:hint="Confirm Password"
          android:inputType="textPassword"
          android:layout_marginTop="20dp"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          android:textSize="18sp"
          app:layout_constraintTop_toBottomOf="@+id/registerPass"
          tools:layout_editor_absoluteX="10dp" />



      <Button
          android:id="@+id/register"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:background="@drawable/login_butt"
android:layout_marginBottom="70dp"
          android:text="REGISTER"
          android:textColor="@color/white"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/regConfirmPass" />

      <TextView
          android:id="@+id/loginRrdirectText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Already have an account?"
          android:textColor="@color/teal_200"
          android:textSize="18sp"
          android:textStyle="bold"

          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/register" />


   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>